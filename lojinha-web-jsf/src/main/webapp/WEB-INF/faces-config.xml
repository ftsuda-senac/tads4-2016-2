      <default-locale>en-US</default-locale>
      <supported-locale>pt-BR</supported-locale>
    </locale-config>
    <resource-bundle>
      <!-- Nome do arquivo -->
      <base-name>br.senac.tads4.lojinha.mensagens.messages</base-name>
      <!-- Nome da variÃ¡vel usada nas telas -->
      <var>msgs</var>
    </resource-bundle>
  </application>

  <lifecycle>
    <phase-listener>
      br.senac.tads4.lojinha.listener.AutorizacaoFilter
    </phase-listener>
  </lifecycle>
  
</faces-config>
